@model IPagedList<BookLibrary.ViewModels.BookList.BookListItem>

@{
    ViewBag.Title = "Book List";
}

@using (Ajax.BeginForm(new AjaxOptions()
{
    HttpMethod = "GET",    
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "bookListContainer"
}))

{
    <fieldset style="border:1px solid black;padding:10px">
        <legend style="display: inline">Search</legend>
        <input type="text" name="searchTerm" title="Keyword to search in book name and description." />
        <br />
        @Html.CheckBox("showInLibrary", new { @title = "Check to show only the books which are in the libary at present." }) Show In-Library Books Only
        <br />
        <input type="submit" value="Search" />
    </fieldset>
}

<script type="text/javascript" src="/Scripts/BorrowBook.js"></script>
<script type="text/javascript" src="/Scripts/PagerList.js"></script>

@Html.Partial("_BookList", Model)
