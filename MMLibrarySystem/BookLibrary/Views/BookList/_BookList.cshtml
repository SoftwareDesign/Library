@using BookLibrary.Views
@model IPagedList<BookLibrary.ViewModels.BookList.BookListItem>
<div id="bookListContainer">
    <table>
        <tr>
            <td>Status
            </td>
            <td>Operation
            </td>
            <td>Title
            </td>
            <td>Publisher
            </td>
            <td>Book Number
            </td>
            <td>Borrowed By
            </td>
            <td>Return Date
            </td>
            <td>Subscribed By
            </td>
        </tr>
        @{foreach (var item in Model)
          {
            <tr>
                <td>@item.State
                </td>
                <td>@Ajax.UserOperation(item.Operation)
                </td>
                <td>@Html.UserOperation(item.Title)
                </td>
                <td>@item.Publisher
                </td>
                <td>@item.BookNumber
                </td>
                <td>@item.BorrowedBy
                </td>
                <td>@item.ReturnDate
                </td>
                <td>@item.SubscribedBy
                </td>
            </tr>
          }
        }
    </table>
    <div class="pageList" mytarget="#bookListContainer">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), PagedListRenderOptions.MinimalWithPageCountText)
    </div>
</div>
