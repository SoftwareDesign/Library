@model MMLibrarySystem.ViewModels.Admin.EditBookInfo

@{
    ViewBag.Title = Model.PageTitle;
}
@Styles.Render("~/Content/themes/base/css", "~/Content/css")

<script type="text/javascript">
    $(function () {
        $("#PurchaseDate").datepicker();
    });
</script>
@using (Ajax.BeginForm(new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "bookDetail" }))
{
    @Html.HiddenFor(model => model.BookId)
    @Html.Partial("_BookInfo", Model)
    <input type="submit" value="@Model.Operation" onclick="@Model.Confirmmation" />
 }