@model MMLibrarySystem.Models.Book

@{
    ViewBag.Title = "Book Detail";
}

<h2>Book Detail</h2>

<table id="bookDetail">
    <tr>
        <td>Title</td>
        <td>@Model.BookType.Title</td>
    </tr>
    <tr>
        <td>Publisher</td>
        <td>@Model.BookType.Publisher</td>
    </tr>
    <tr>
        <td>ID</td>
        <td>@Model.BookNumber</td>
    </tr>
    <tr>
        <td>Net Price</td>
        <td>@Model.NetPrice</td>
    </tr>
    <tr>
        <td>Purchase Date</td>
        <td>@Model.PurchaseDate</td>
    </tr>
    <tr>
        <td>Requested By</td>
        <td>@Model.RequestedBy</td>
    </tr>
    <tr>
        <td>Purchase Url</td>
        <td>@Model.PurchaseUrl</td>
    </tr>
    <tr>
        <td>User And Team</td>
        <td>@Model.BookType.UserAndTeam</td>
    </tr>
    <tr>
        <td>Supplier</td>
        <td>@Model.BookType.Supplier</td>
    </tr>
    <tr>
        <td>Description</td>
        <td>@Model.BookType.Description</td>
    </tr>
</table>
